          <argument>
            <kind>1</kind>
            <string>// Inputs
if keyboard_check(C_UP) { m_y = -1; moving = 1; }
if keyboard_check(C_DOWN) { m_y = 1; moving = 1; }
if keyboard_check(C_LEFT) { m_x = -1; moving = 1; }
if keyboard_check(C_RIGHT) { m_x = 1; moving = 1; }

if keyboard_check_released(C_UP) { m_y = 0; moving = 0; }
if keyboard_check_released(C_DOWN) { m_y = 0; moving = 0; }
if keyboard_check_released(C_LEFT) { m_x = 0; moving = 0; }
if keyboard_check_released(C_RIGHT) { m_x = 0; moving = 0; }

if keyboard_check_pressed(C_JUMP) { jumping = 1; }

if keyboard_check_pressed(C_FIRE) { firing = 1; }

// Movement Physics

// Jumping sequence

if (jumping == 1) {
    if (z == 0) jumping = 2;  // Wait until on the ground again
}

if (jumping &gt; 1 &amp;&amp; jumping &lt; 1+jumpDelay) {
    image_speed = 0;
    sprite_index = sprHybrid_jump;
    image_index = 0;
    spd = 0;
    moving -= 1;
    jumping += 1;
}
if (jumping == 1+jumpDelay) {
    image_index = 1;
    z_accel = jumpStrength;
    moving += 1;
    jumping = 0;
}

// Check if on ground
    // Temp solution
if (z == 0) {
    ground = 1;
}
if (z != 0) {
    ground = 0;
}

// Direction
dir = darctan2(m_y, m_x);

// Speed
if (ground == 1) {
    if (moving == 1) {
        spd = walkSpeed;
    }
    if (moving != 1) {
        spd = 0;
    }
    xx_accel = dcos(dir)*spd;
    yy_accel = dsin(dir)*spd;
}

// Speed, air
if (ground == 0) {
    //xx_accel = (xx_accel*0.985);
    //yy_accel = (yy_accel*0.985);
}

xx += xx_accel;
yy += yy_accel;



// Show on 2d plane
y = (yy*0.5)-z;
x = xx;


// Firing
if (firing == 1) {
    if (ammo &gt; 0) {
        ammo -= 1;
    }
    firing = 0;
}

// Z axis stuff
z += z_accel;

if (z &gt; 0) {
    z_accel -= z_gravity;
}
if (z &lt; 0) {
    z = 0;
    z_accel = 0;
}



// Sprite
if (z == 0 &amp;&amp; jumping == 0) {
    image_speed = 0.25;
    if (spd == 0) sprite_index = sprHybrid_idle;
    if (spd &gt; walkSpeed*0.5 || spd &lt; -(walkSpeed*0.5)) sprite_index = sprHybrid_walk;
}
if (z_accel &lt; -3)  {
    if (sprite_index == sprHybrid_jump) {
        image_index = 2;
    }
}

if (m_x == -1) image_xscale = -1;
if (m_x == 1) image_xscale = 1;



</string>
